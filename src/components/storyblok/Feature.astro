---
import { storyblokEditable } from '@storyblok/astro';

const { blok } = Astro.props;
---

<div {...storyblokEditable(blok)} class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
  {blok.icon && (
    <div class="text-4xl mb-4">{blok.icon}</div>
  )}
  {blok.name && (
    <h3 class="text-xl font-semibold text-gray-900 mb-2">
      {blok.name}
    </h3>
  )}
  {blok.description && (
    <p class="text-gray-600">
      {blok.description}
    </p>
  )}
  {blok.link && blok.link_text && (
    <a href={blok.link} class="inline-block mt-4 text-blue-600 hover:text-blue-700 font-medium">
      {blok.link_text} â†’
    </a>
  )}
</div>