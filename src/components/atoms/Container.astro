---
/**
 * Atom: Container
 * Enhanced container component for layout structure with design token support
 */
interface Props {
  class?: string;
  maxWidth?: 'sm' | 'md' | 'lg' | 'xl' | 'full' | 'narrow' | 'content' | 'wide';
  padding?: 'default' | 'none' | 'sm' | 'md' | 'lg' | 'xl';
  layout?: 'default' | 'grid';
  gridColumns?: string;
  gap?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  alignItems?: 'start' | 'center' | 'end' | 'stretch';
}

const {
  class: className = '',
  maxWidth = 'xl',
  padding = 'default',
  layout = 'default',
  gridColumns,
  gap,
  alignItems,
} = Astro.props;
---

<div
  class:list={[
    'hg-Container',
    `max-width-${maxWidth}`,
    `padding-${padding}`,
    layout === 'grid' ? 'layout-grid' : 'layout-default',
    gap && `gap-${gap}`,
    alignItems && `align-${alignItems}`,
    className,
  ]}
  style={gridColumns ? `--grid-columns: ${gridColumns}` : undefined}
>
  <slot />
</div>

<style>
  .hg-Container {
    margin: 0 auto;
  }

  /* Max width variants using design tokens */
  .max-width-sm {
    max-width: var(--size-container-narrow);
  }

  .max-width-md {
    max-width: var(--size-container-content);
  }

  .max-width-lg {
    max-width: var(--size-container-grid);
  }

  .max-width-xl {
    max-width: var(--size-container-wide);
  }

  .max-width-full {
    max-width: 100%;
  }

  .max-width-narrow {
    max-width: var(--size-container-narrow);
  }

  .max-width-content {
    max-width: var(--size-content-max-width-xl);
  }

  .max-width-wide {
    max-width: var(--size-container-wide);
  }

  /* Padding variants using design tokens */
  .padding-default {
    padding: 0 var(--space-lg);
  }

  .padding-none {
    padding: 0;
  }

  .padding-sm {
    padding: 0 var(--space-sm);
  }

  .padding-md {
    padding: 0 var(--space-md);
  }

  .padding-lg {
    padding: 0 var(--space-lg);
  }

  .padding-xl {
    padding: 0 var(--space-xl);
  }

  /* Layout variants */
  .layout-default {
    display: block;
  }

  .layout-grid {
    display: grid;
    grid-template-columns: var(--grid-columns, 1fr);
  }

  /* Gap variants */
  .gap-xs {
    gap: var(--space-xs);
  }

  .gap-sm {
    gap: var(--space-sm);
  }

  .gap-md {
    gap: var(--space-md);
  }

  .gap-lg {
    gap: var(--space-lg);
  }

  .gap-xl {
    gap: var(--space-xl);
  }

  /* Align items variants */
  .align-start {
    align-items: flex-start;
  }

  .align-center {
    align-items: center;
  }

  .align-end {
    align-items: flex-end;
  }

  .align-stretch {
    align-items: stretch;
  }

  /* Responsive padding adjustments */
  @media (width <= 64rem) {
    .padding-default,
    .padding-lg {
      padding: 0 var(--space-md);
    }
  }

  @media (width <= 48rem) {
    .padding-default,
    .padding-lg {
      padding: 0 var(--space-md);
    }
  }
</style>
