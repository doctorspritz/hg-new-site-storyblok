---
/**
 * Atom: VisuallyHidden
 * Hides content visually while keeping it accessible to screen readers.
 * Useful for providing context to assistive technologies without affecting visual design.
 */
interface Props {
  /** Tag to render (default: span) */
  as?: 'span' | 'div' | 'p';
  /** Additional CSS classes */
  class?: string;
}

const { as: Tag = 'span', class: className } = Astro.props as Props;
---

<Tag class:list={['hg-VisuallyHidden', className]}>
  <slot />
</Tag>

<style>
  .hg-VisuallyHidden {
    position: absolute;
    width: var(--dim-accessibility-hidden);
    height: var(--dim-accessibility-hidden);
    padding: 0;
    margin: 0;
    overflow: hidden;
    clip-path: inset(50%);
    white-space: nowrap;
    border: 0;
  }
</style>
