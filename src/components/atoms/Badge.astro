---
/**
 * Badge Atom
 * Hunter Galloway Design System - Atomic Component
 *
 * A self-contained badge component for labels, statuses, and highlights.
 * Uses design tokens for all styling values.
 */

export interface Props {
  /** Badge content */
  text?: string;
  /** Size variant */
  size?: 'sm' | 'md' | 'lg';
  /** Color variant */
  variant?:
    | 'default'
    | 'primary'
    | 'success'
    | 'warning'
    | 'error'
    | 'info'
    | 'corner';
  /** Additional CSS classes */
  class?: string;
}

const {
  text,
  size = 'md',
  variant = 'default',
  class: className = '',
} = Astro.props;

// Build CSS classes
const badgeClasses = [
  'hg-badge',
  `hg-badge--${size}`,
  `hg-badge--${variant}`,
  className,
]
  .filter(Boolean)
  .join(' ');
---

<span class={badgeClasses}>
  <slot>{text}</slot>
</span>

<style>
  .hg-badge {
    display: inline-block;
    text-align: center;
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-normal);
    border-radius: var(--radius-md);
    white-space: nowrap;
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-lg);
  }

  /* Size variants using design tokens */
  .hg-badge--sm {
    font-size: var(--font-size-xs);
    padding: calc(var(--space-xs) / 2) var(--space-xs);
  }

  .hg-badge--md {
    font-size: var(--font-size-sm);
    padding: var(--space-xs) var(--space-sm);
  }

  .hg-badge--lg {
    font-size: var(--font-size-md);
    padding: var(--space-xs) var(--space-md);
  }

  /* Color variants using HG design tokens */
  .hg-badge--default {
    background-color: var(--color-surface);
    color: var(--color-text-body);
    border: var(--border-width-sm) var(--border-style-solid)
      var(--color-border-subtle);
  }

  .hg-badge--primary {
    background-color: var(--color-interactive-primary);
    color: var(--color-text-on-primary);
    border: var(--border-width-sm) var(--border-style-solid)
      var(--color-interactive-primary);
  }

  .hg-badge--success {
    background-color: var(--color-feedback-success);
    color: var(--color-text-inverse);
    border: var(--border-width-sm) var(--border-style-solid)
      var(--color-feedback-success);
  }

  .hg-badge--warning {
    background-color: var(--color-feedback-warning);
    color: var(--color-text-body);
    border: var(--border-width-sm) var(--border-style-solid)
      var(--color-feedback-warning);
  }

  .hg-badge--error {
    background-color: var(--color-feedback-error);
    color: var(--color-text-inverse);
    border: var(--border-width-sm) var(--border-style-solid)
      var(--color-feedback-error);
  }

  .hg-badge--info {
    background-color: var(--color-feedback-info);
    color: var(--color-text-inverse);
    border: var(--border-width-sm) var(--border-style-solid)
      var(--color-feedback-info);
  }

  .hg-badge--corner {
    border-radius: 0 var(--radius-lg) 0 var(--radius-lg);
    padding: var(--space-sm) var(--space-md);
    margin: 0;
    min-width: auto;
    border: none;
    box-shadow: var(--shadow-sm);
    background-color: var(--color-interactive-primary);
    color: var(--color-text-on-primary);
  }
</style>
