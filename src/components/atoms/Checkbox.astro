---
/**
 * Atom: Checkbox
 * Accessible checkbox with token-driven UI.
 */
interface Props {
  id?: string;
  name?: string;
  value?: string;
  label?: string;
  checked?: boolean;
  disabled?: boolean;
  required?: boolean;
  ariaLabel?: string;
}

const {
  id,
  name = 'checkbox',
  value = 'on',
  label = '',
  checked = false,
  disabled = false,
  required = false,
  ariaLabel,
} = Astro.props as Props;

const computedId = id ?? `${name}-${value}`;
---

<label
  class:list={['hg-Checkbox', { 'is-disabled': disabled }]}
  for={computedId}
>
  <input
    id={computedId}
    type="checkbox"
    name={name}
    value={value}
    checked={checked}
    disabled={disabled}
    required={required}
    aria-label={ariaLabel}
  />
  <span class="box" aria-hidden="true"></span>
  <span class="text"><slot>{label}</slot></span>
</label>

<style>
  .hg-Checkbox {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    cursor: pointer;
    color: var(--color-text-body);
  }

  .hg-Checkbox input {
    position: absolute;
    opacity: 0;
    width: var(--dim-accessibility-hidden);
    height: var(--dim-accessibility-hidden);
    pointer-events: none;
  }

  .box {
    width: var(--space-md);
    height: var(--space-md);
    border: var(--border-width-md) var(--border-style-solid)
      var(--color-border-form);
    border-radius: var(--radius-md);
    background-color: var(--color-surface);
    position: relative;
    transition:
      border-color var(--transition-duration-fast)
        var(--transition-timing-function-ease),
      background-color var(--transition-duration-fast)
        var(--transition-timing-function-ease);
  }

  /* Checkmark */
  .box::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: var(--space-xs);
    height: var(--space-sm);
    border-right: var(--border-width-md) solid var(--color-interactive-primary);
    border-bottom: var(--border-width-md) solid var(--color-interactive-primary);
    transform: translate(-50%, -60%) rotate(45deg) scale(0);
    transition: transform var(--transition-duration-fast)
      var(--transition-timing-function-ease);
  }

  .hg-Checkbox.is-disabled {
    cursor: not-allowed;
    color: var(--color-text-subtle);
  }

  .hg-Checkbox.is-disabled .box {
    border-color: var(--color-border-subtle);
    background-color: var(--color-interactive-disabled);
  }

  .hg-Checkbox input:checked + .box {
    border-color: var(--color-interactive-primary);
    background-color: var(--color-interactive-selection-background);
  }

  .hg-Checkbox input:checked + .box::after {
    transform: translate(-50%, -60%) rotate(45deg) scale(1);
  }

  .hg-Checkbox input:focus-visible + .box {
    outline: var(--border-width-md) var(--border-style-solid)
      var(--color-border-focus);
    outline-offset: var(--border-width-md);
  }

  .text {
    line-height: var(--line-height-normal);
  }
</style>
