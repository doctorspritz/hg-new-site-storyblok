---
export interface Crumb { label: string; href?: string }
export interface Props { items?: Crumb[] }
const { items = [] } = Astro.props as Props;
---
<nav aria-label="Breadcrumb" class="hg-breadcrumbs">
  <ol>
    {items.map((c, i) => (
      <li class={i === items.length - 1 ? 'current' : ''}>
        {c.href && i < items.length - 1 ? <a href={c.href}>{c.label}</a> : <span aria-current="page">{c.label}</span>}
      </li>
    ))}
  </ol>
</nav>
<style>
.hg-breadcrumbs ol { list-style: none; display: flex; gap: .5rem; padding: 0; margin: 0 0 1rem 0; }
.hg-breadcrumbs li::after { content: '/'; margin-left: .5rem; }
.hg-breadcrumbs li.current::after { content: ''; }
.hg-breadcrumbs a { text-decoration: underline; }
</style>


