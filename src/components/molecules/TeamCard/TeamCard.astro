---
/**
 * Molecule: TeamCard
 * Displays team member information with avatar, name, role and social links.
 */
import Avatar from '../../atoms/Avatar.astro';
import Heading from '../../atoms/Heading.astro';
import Paragraph from '../../atoms/Paragraph.astro';
import Link from '../../atoms/Link.astro';

interface SocialLink {
  href: string;
  label: string;
}

interface Props {
  name: string;
  role: string;
  avatarSrc?: string;
  avatarAlt?: string;
  socialLinks?: SocialLink[];
  class?: string;
}

const {
  name,
  role,
  avatarSrc,
  avatarAlt = '',
  socialLinks = [],
  class: className = '',
} = Astro.props as Props;
---

<div class:list={['hg-TeamCard', className]}>
  <Avatar
    src={avatarSrc}
    alt={avatarAlt || name}
    name={name}
    size="xl"
    class="avatar"
  />
  <Heading level={3} size="md" class="name">{name}</Heading>
  <Paragraph class="role">{role}</Paragraph>
  {
    socialLinks.length > 0 && (
      <ul class="social-links">
        {socialLinks.map((link) => (
          <li>
            <Link href={link.href} label={link.label} />
          </li>
        ))}
      </ul>
    )
  }
</div>

<style>
  .hg-TeamCard {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-lg);
    border-radius: var(--radius-lg);
    background: var(--color-background-surface);
  }

  .avatar {
    margin-bottom: var(--space-xs);
  }

  .name {
    color: var(--color-text-heading);
  }

  .role {
    color: var(--color-text-subtle);
    font-size: var(--font-size-sm);
  }

  .social-links {
    display: flex;
    gap: var(--space-sm);
    list-style: none;
    margin: var(--space-sm) 0 0;
    padding: 0;
  }
</style>
