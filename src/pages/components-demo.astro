const reputationCopy = {
    title: "2024 Mortgage Broker of the Year",
    marketText:
        "Market average rejection rate is 40%, our rejection rate is 3%",
    marketLinkText: "Source",
    marketLinkHref: "#",
    prize: "2024 Mortgage Broker of the Year",
    awards: [
        { src: "/images/img_new/2019_001.png", alt: "Award 1" },
        { src: "/images/img_new/2019_002.png", alt: "Award 2" },
        {
            src: "/images/awards/2024-qld-nt-broker-of-the-year.png",
            alt: "Award 3",
        },
        {
            src: "/images/awards/qld-nt-brokerage-under-5-brokers.png",
            alt: "Award 4",
        },
        {
            src: "/images/awards/Mortgage-Broker-Brisbane-Hunter-Galloway-Award-2024.webp",
            alt: "Award 5",
        },
        {
            src: "/images/img_new/best-mortgage-broker-2019.png",
            alt: "Award 6",
        },
    ],
};

const awardsData = [
    {
        src: "/images/awards/2024-qld-nt-broker-of-the-year.png",
        alt: "Award 1",
