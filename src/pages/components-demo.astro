    { src: "/images/logos/westpac.png", alt: "Westpac" },
];

const loanPurposeData = [
    {
        title: "Home Loans",
        description: "We help you find the right home loan.",
        href: "#",
        imageSrc:
            "/images/what-you-see-when-you-look-up-full-length-shot-affectionate-family-four-holding-cardboard-roof-their-heads-while-sitting-living-room-home.jpg",
        imageAlt: "Home Loans",
        buttonText: "Learn More",
    },
    {
        title: "Refinancing",
        description: "Get a better deal on your existing home loan.",
        href: "#",
        imageSrc:
            "/images/what-you-see-when-you-look-up-full-length-shot-affectionate-family-four-holding-cardboard-roof-their-heads-while-sitting-living-room-home.jpg",
