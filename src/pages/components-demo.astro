---
import BaseHead from "../components/BaseHead.astro";
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
import HeroWPParity from "../components/organisms/HeroWPParity.astro";
import RiskWidget from "../components/organisms/RiskWidget.astro";
import ReputationWidget from "../components/organisms/ReputationWidget.astro";
import Button from "../components/atoms/Button/Button.astro";
import Input from "../components/atoms/Input/Input.astro";
import Heading from "../components/atoms/Heading.astro";
import BorrowingCalculator from "../components/organisms/BorrowingCalculator.astro";
import MortgageVsRentSection from "../components/organisms/MortgageVsRentSection.astro";
import RentCalculatorSection from "../components/organisms/RentCalculatorSection.astro";
import BorrowingCapacityForm from "../components/organisms/BorrowingCapacityForm.astro";
import AssessmentForm from "../components/organisms/AssessmentForm/AssessmentForm.astro";
import AwardsSection from "../components/organisms/AwardsSection.astro";
import BanksSection from "../components/organisms/BanksSection.astro";
import BlogSection from "../components/organisms/BlogSection.astro";
import FAQSection from "../components/organisms/FAQSection.astro";
import LoanPurposeSection from "../components/organisms/LoanPurposeSection.astro";
import ReviewsSection from "../components/organisms/ReviewsSection.astro";
import WhyChoose from "../components/organisms/WhyChoose.astro";
import PropertyMap from "../components/organisms/PropertyMap.astro";
import Statistics from "../components/organisms/Statistics.astro";
import WPHero from "../components/organisms/WPHero.astro";

const SITE_TITLE = "Components Demo | Hunter Galloway";
const SITE_DESCRIPTION =
    "A demo page showcasing the specific design components requested";

const heroData = {
    label: "Find out your chances of getting a loan",
    title: "Mortgage Broker Brisbane",
    subtitle:
        "Improve your chances of getting a loan with an award winning mortgage broker. We have one of the highest loan approval rates in the country.",
    features: [
        {
            text: "Market-leading loan approval rate in Australia of 97%",
            tooltip:
                "Approximately 40% of home loan applications were rejected in December 2018...",
            highlightText: "Market-leading",
        },
        {
            text: "Variety of options due to direct access to 30+ Australian banks & lenders",
        },
        {
            text: "#1 rated Mortgage Broker in Brisbane",
            tooltip:
                "The highest rated and most reviewed Mortgage Broker in Brisbane...",
            highlightText: "#1 rated",
        },
    ],
    cta: { label: "Get a Free Assessment", href: "#" },
    note: "We promise to get back to you within 4 business hours",
    bgDesktop:
        "https://conversionratestore.github.io/projects/hantergalloway/img/bg_banner_new.jpg",
    bgMobile:
        "https://hgstagingsite.wpengine.com/wp-content/uploads/2024/10/hero_img_mb.jpg",
};

// Mock data for widgets since we don't have the JSON files
const riskCopy = {
