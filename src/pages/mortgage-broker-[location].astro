---
import BaseLayout from '../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const PUBLIC_TOKEN = '2M8tuQ6eLmpwuw7WUhMccAtt';
  
  try {
    const response = await fetch(`https://api.storyblok.com/v2/cdn/stories?token=${PUBLIC_TOKEN}&version=published&starts_with=mortgage-broker-`);
    
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    
    const data = await response.json();
    const stories = data.stories || [];
    
    return stories.map((story) => ({
      params: { location: story.slug.replace('mortgage-broker-', '') },
      props: { story }
    }));
  } catch (error) {
    console.error('Error fetching stories:', error);
    return [];
  }
}

const { story } = Astro.props;
const { location } = Astro.params;

// Extract content from the story
const hero = story.content.body?.find(blok => blok.component === 'hero');
const textBlocks = story.content.body?.filter(blok => blok.component === 'text') || [];
const cta = story.content.body?.find(blok => blok.component === 'cta');

const title = story.name || `Mortgage Broker in ${location.charAt(0).toUpperCase() + location.slice(1)}`;
const description = hero?.subtitle || `Award-winning mortgage broker services in ${location.charAt(0).toUpperCase() + location.slice(1)}. Get expert help with home loans, refinancing, and investment property finance.`;
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-white">
    <!-- Hero Section -->
    {hero && (
      <section class="hero_widget widget bg-gradient-to-br from-gray-50 to-gray-100 py-16 lg:py-24">
        <div class="container mx-auto px-4">
          <div class="inner_widget max-w-6xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
              <div class="text-center lg:text-left">
                <p class="hero_text text-sm font-semibold text-gray-600 mb-4 uppercase tracking-wide">
                  Find out your chances of getting a loan
                </p>
                <h1 class="hero_title text-4xl lg:text-5xl xl:text-6xl font-black text-gray-900 mb-6 leading-tight">
                  {hero.title}
                </h1>
                {hero.subtitle && (
                  <p class="hero_subtitle text-lg lg:text-xl text-gray-700 mb-8 leading-relaxed">
                    {hero.subtitle}
                  </p>
                )}
                <ul class="hero_points text-left mb-8 space-y-3">
                  <li class="flex items-center text-gray-700">
                    <svg class="w-5 h-5 text-yellow-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    One of Queensland's highest loan approval rates
                  </li>
                  <li class="flex items-center text-gray-700">
                    <svg class="w-5 h-5 text-yellow-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    Award-winning mortgage broker service
                  </li>
                  <li class="flex items-center text-gray-700">
                    <svg class="w-5 h-5 text-yellow-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    No upfront fees - completely free service
                  </li>
                </ul>
                {hero.cta_text && (
                  <div class="btn_wrap mb-6">
                    <a href={hero.cta_link?.url || hero.cta_link || '#contact'} class="btn_yellow inline-block bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-bold px-8 py-4 rounded-lg transition-colors text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                      {hero.cta_text}
                    </a>
                  </div>
                )}
                <p class="hero_text text-sm text-gray-600">
                  We promise to get back to you within 4 business hours
                </p>
              </div>
              <div class="hidden lg:block">
                <img class="hero_img rounded-lg shadow-2xl" src="/images/img_new/what-you-see-when-you-look-up-full-length-shot-affectionate-family-four-holding-cardboard-roof-their-heads-while-sitting-living-room-home.jpg" alt="Happy family with mortgage broker services" loading="lazy" />
              </div>
            </div>
          </div>
        </div>
      </section>
    )}
    
    <!-- Content Sections -->
    <main class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          {textBlocks.map((block, index) => (
            <section class="text_widget widget mb-16" key={index}>
              <div class="inner_widget">
                {block.title && (
                  <h2 class="inner_title text-3xl lg:text-4xl font-bold text-gray-900 mb-8 text-center lg:text-left">
                    {block.title}
                  </h2>
                )}
                {(block.text || block.content) && (
                  <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed" set:html={block.text || block.content} />
                )}
              </div>
            </section>
          ))}
        </div>
      </div>
    </main>
    
    <!-- CTA Section -->
    {cta && (
      <section class="cta_widget widget bg-gradient-to-r from-gray-900 to-gray-800 py-20">
        <div class="container mx-auto px-4">
          <div class="inner_widget max-w-3xl mx-auto text-center">
            {cta.title && (
              <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
                {cta.title}
              </h2>
            )}
            {(cta.subtitle || cta.description) && (
              <p class="text-xl text-gray-300 mb-10 leading-relaxed">
                {cta.subtitle || cta.description}
              </p>
            )}
            {cta.button_text && (
              <a href={cta.button_link?.url || cta.button_link || '#contact'} class="btn_yellow inline-block bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-bold px-10 py-4 rounded-lg transition-colors text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                {cta.button_text}
              </a>
            )}
            <p class="text-sm text-gray-400 mt-6">
              No obligation consultation - completely free service
            </p>
          </div>
        </div>
      </section>
    )}
  </div>
</BaseLayout>