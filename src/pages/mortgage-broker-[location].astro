---
import BaseLayout from '../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const PUBLIC_TOKEN = '2M8tuQ6eLmpwuw7WUhMccAtt';
  
  try {
    const response = await fetch(`https://api.storyblok.com/v2/cdn/stories?token=${PUBLIC_TOKEN}&version=published&starts_with=mortgage-broker-`);
    
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    
    const data = await response.json();
    const stories = data.stories || [];
    
    return stories.map((story) => ({
      params: { location: story.slug.replace('mortgage-broker-', '') },
      props: { story }
    }));
  } catch (error) {
    console.error('Error fetching stories:', error);
    return [];
  }
}

const { story } = Astro.props;
const { location } = Astro.params;

// Extract content from the story
const hero = story.content.body?.find(blok => blok.component === 'hero');
const textBlocks = story.content.body?.filter(blok => blok.component === 'text') || [];
const cta = story.content.body?.find(blok => blok.component === 'cta');

const title = story.name || `Mortgage Broker in ${location.charAt(0).toUpperCase() + location.slice(1)}`;
const description = hero?.subtitle || `Award-winning mortgage broker services in ${location.charAt(0).toUpperCase() + location.slice(1)}. Get expert help with home loans, refinancing, and investment property finance.`;
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-white">
    <!-- Hero Section -->
    {hero && (
      <section class="bg-blue-900 text-white py-16">
        <div class="container mx-auto px-4">
          <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-6">
              {hero.title}
            </h1>
            {hero.subtitle && (
              <p class="text-xl md:text-2xl mb-8 text-blue-100">
                {hero.subtitle}
              </p>
            )}
            {hero.cta_text && (
              <a href={hero.cta_link || '#contact'} class="inline-block bg-orange-500 hover:bg-orange-600 text-white font-semibold px-8 py-3 rounded-lg transition-colors">
                {hero.cta_text}
              </a>
            )}
          </div>
        </div>
      </section>
    )}
    
    <!-- Content Sections -->
    <main class="py-12">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          {textBlocks.map((block, index) => (
            <section class="mb-12" key={index}>
              {block.title && (
                <h2 class="text-3xl font-bold text-gray-900 mb-6">
                  {block.title}
                </h2>
              )}
              {block.content && (
                <div class="prose prose-lg max-w-none text-gray-700" set:html={block.content} />
              )}
            </section>
          ))}
        </div>
      </div>
    </main>
    
    <!-- CTA Section -->
    {cta && (
      <section class="bg-gray-50 py-16">
        <div class="container mx-auto px-4">
          <div class="max-w-2xl mx-auto text-center">
            {cta.title && (
              <h2 class="text-3xl font-bold text-gray-900 mb-6">
                {cta.title}
              </h2>
            )}
            {cta.description && (
              <p class="text-xl text-gray-600 mb-8">
                {cta.description}
              </p>
            )}
            {cta.button_text && (
              <a href={cta.button_link || '#contact'} class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-3 rounded-lg transition-colors">
                {cta.button_text}
              </a>
            )}
          </div>
        </div>
      </section>
    )}
  </div>
</BaseLayout>